from time import sleep

listagem = ('camiseta', 89.99,
            'camisa', 65.00,
            'blusa',119.99,
            'calça',150.00,
            'short',55.00,
            'tenis',799.99)
print('--'*13)
print('Álvaro Junior Wear')
print('--'*13)

print('FAZER CADASTRO')
print('--'*22)
sleep(1)
