print('ÁLVARO JUNIOR WEAR')
print('-'*22)
print('VALORES')
print('-'*22)

for pos in range(len(listagem)):
    if pos % 2 == 0:
        print('{}.......'.format(listagem[pos]), end='')

    else:
        print('{}'.format(listagem[pos]))
print('--'*22)


print(F'Seja Bem-Vindo(a) {nome_completo}')#nome da pessoa

print('--'*22)
